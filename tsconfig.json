{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "declaration": true,
    "outDir": "./dist",
    "lib": [ "es2022", "DOM" ],
    "strict": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist", "spec", "**/*.spec.ts"]
}